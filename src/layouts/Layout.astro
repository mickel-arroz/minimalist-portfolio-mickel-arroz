---
interface Props {
  title: string;
}

const { title } = Astro.props;

import { basics, openGraph } from "@cv";
const { name } = basics;
const { titleOG, description, url, previewImage } = openGraph;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="author"
      content=`${name}`
    />
    <meta
      name="keywords"
      content="portfolio, portafolio, porfolio, cv, curriculum vitae, portafolio minimalista, Mickel Arroz"
    />
    <meta
      name="description"
      content=`Portafolio Minimalista de ${name}`
    />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon.svg"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />

    <!-- Open Graph / Facebook -->
    <meta
      property="og:type"
      content="website"
    />
    <meta
      property="og:url"
      content={url}
    />
    <meta
      property="og:title"
      content={titleOG}
    />
    <meta
      property="og:description"
      content={description}
    />
    <meta
      property="og:image"
      content={previewImage}
    />

    <!-- Twitter -->
    <meta
      property="twitter:card"
      content="summary_large_image"
    />
    <meta
      property="twitter:url"
      content={url}
    />
    <meta
      property="twitter:title"
      content={titleOG}
    />
    <meta
      property="twitter:description"
      content={description}
    />
    <meta
      property="twitter:image"
      content={previewImage}
    />

    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>

  <style is:global>
    html {
      font-family: monospace, "Courier New", Courier;
      letter-spacing: 0.05rem;
    }

    body,
    figure {
      margin: 0;
      padding: 0;
    }

    a {
      text-decoration: none;
      color: #666;
    }

    ul {
      list-style: none;
      margin: 0;
      padding: 0;
    }

    *,
    *::before,
    *::after {
      box-sizing: border-box;
    }

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
      margin: 0;
    }

    p,
    span {
      color: #666;
      font-size: 0.9rem;
      line-height: 1.5;
      margin: 0;
      text-wrap: pretty;
      padding: 0;
    }

    /* Apartado para ocultar los atajos al imprimir */
    @media print {
      ninja-keys {
        display: none;
      }
      * {
        color: black !important;
      }
    }
  </style>
</html>
