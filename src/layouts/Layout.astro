---
interface Props {
  title: string;
}

const { title } = Astro.props;

import { basics, openGraph } from "@cv";
const { name } = basics;
const { titleOG, description, url, previewImage } = openGraph;

import Header from '@/components/header/Header.astro'

---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="author"
      content=`${name}`
    />
    <meta
      name="keywords"
      content="portfolio, portafolio, porfolio, cv, curriculum vitae, portafolio minimalista, Mickel Arroz"
    />
    <meta
      name="description"
      content=`Portafolio Minimalista de ${name}`
    />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon.svg"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />

    <!-- Open Graph / Facebook -->
    <meta
      property="og:type"
      content="website"
    />
    <meta
      property="og:url"
      content={url}
    />
    <meta
      property="og:title"
      content={titleOG}
    />
    <meta
      property="og:description"
      content={description}
    />
    <meta
      property="og:image"
      content={previewImage}
    />

    <!-- Twitter -->
    <meta
      property="twitter:card"
      content="summary_large_image"
    />
    <meta
      property="twitter:url"
      content={url}
    />
    <meta
      property="twitter:title"
      content={titleOG}
    />
    <meta
      property="twitter:description"
      content={description}
    />
    <meta
      property="twitter:image"
      content={previewImage}
    />

    <title>{title}</title>
  </head>
  <body>
    <Header></Header>
    <slot />
  </body>

  <style is:global>
    /*    ----    VARIABLES     ----     */

    /* Variables genericas globales */
    :root {
      /* Tama√±o del texto de los elementos */
      --sizeTitle: 2rem;
      --sizeSummary: 0.9rem;
      --sizeSubTitle: 1.5rem;
      --sizeTitleElement: 1.2rem;
      --sizeSubTitleTag: 0.8rem;
      --sizeSpanTag: 0.6rem;
      --sizeTime: 0.85rem;

      --sizeLineHeightTexto: 1.5rem;

      --weightSkill: 600;

      --borderRadius: 5px;

      --paddingXGeneric: 0.5rem;
    }

    @media (prefers-color-scheme: light) {
      :root {
        /* Color del texto de los elementos */
        --colorTitle: #111;
        --colorSubTitle: #222;
        --colorTitleElement: #333;
        --colorSubTitleTag: #444;
        --colorSummary: #555;
        --colorStudyArea: #555;

        --colorSpanTag: #666;
        --colorLinkHover: #666;
        --colorButton: #777;
        --colorButtonHover: #555;
        --colorBorderButtonHover: #666;
        --colorTime: #666;
        --colorSkill: #555;

        /* Color del fondo de los elementos */
        --bgBody: #fafafa;
        --bgSpanTag: #f1f1f1;
        --bgButtonHover: #f3f3f3;
        --bg-keyboard: #fff;
        --bg-keyboard__key: #eee;

        /* Bordes de los elementos */
        --borderImg: 0.2rem solid #999;
        --borderCard: 1px solid #dfdfdf;
        --borderSubTitleTag: 1px solid #777;
        --borderSkill: 1px solid #888;
        --borderButton: 1px solid #eee;

        --shadowCard: 0 1px 1px #f2f2f2;
      }
    }

    @media (prefers-color-scheme: dark) {
      :root {
        --colorTitle: #eaeaea;
        --colorSubTitle: #dcdcdc;
        --colorTitleElement: #bfbfbf;
        --colorSubTitleTag: #a9a9a9;
        --colorSummary: #989898;
        --colorStudyArea: #989898;

        --colorSpanTag: #8a8a8a;
        --colorLinkHover: #999999;
        --colorButton: #787878;
        --colorButtonHover: #989898;
        --colorBorderButtonHover: #a9a9a9;
        --colorTime: #8a8a8a;
        --colorSkill: #989898;

        --bgBody: #1b1b1b;
        --bgSpanTag: #2a2a2a;
        --bgButtonHover: #333333;
        --bg-keyboard: #232323;
        --bg-keyboard__key: #333333;

        --borderImg: 0.2rem solid #555555;
        --borderCard: 1px solid #444444;
        --borderSubTitleTag: 1px solid #666666;
        --borderSkill: 1px solid #555555;
        --borderButton: 1px solid #444444;

        --shadowCard: 0 1px 1px #1a1a1a;
        --
      }
    }

    /* --------   Resetear estilos CSS  -------- */

    *,
    *::before,
    *::after {
      box-sizing: border-box;
    }

    html {
      font-family: monospace, "Courier New", Courier;
      letter-spacing: 0.05rem;
    }

    body,
    figure {
      margin: 0;
      padding: 0;
      background-color: var(--bgBody);
    }

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
      margin: 0;
    }

    blockquote {
      margin: 0;
      padding: 0;
    }

    /* --------------------------------- */

    article {
      display: flex;
      flex-direction: column;
      gap: 0.4rem;
    }

    footer {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      padding-inline: 0.5rem;
    }

    header {
      display: flex;
      align-items: flex-start;
      justify-content: space-between;
      gap: 1.5rem;
    }

    /*  ----  ESTILOS DE LAS LISTAS ----   */
    ul {
      list-style: none;
      margin: 0;
      padding-block: 0;
      padding-inline: 0.5rem;
      display: flex;
      flex-direction: column;
      flex-wrap: wrap;
      gap: 1.5rem;
    }

    footer span {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 0.5rem;
      color: var(--colorSkill);
      font-size: 0.6rem;
      background-color: var(--bgSpanTag);
      border-radius: var(--borderRadius);
      padding: 0.2rem 0.5rem;
      line-height: normal;
      height: 30px;
    }

    img {
      aspect-ratio: 1/1;
      object-fit: cover;
      border: var(--borderImg);
      border-radius: var(--borderRadius);
    }

    /* ----     ESTILOS PARA LOS TITULOS   ----   */

    h1 {
      color: var(--colorTitle);
      font-size: var(--sizeTitle);
      text-wrap: nowrap;
    }

    h2 {
      color: var(--colorSubTitle);
      font-size: var(--sizeSubTitle);
    }

    h3 {
      color: var(--colorTitleElement);
      font-size: var(--sizeTitleElement);
      font-weight: 600;
      text-wrap: pretty;
    }

    h3:hover {
      color: var(--colorLinkHover);
      text-decoration: underline;
    }

    h4 {
      color: var(--colorSubTitleTag);
      font-size: var(--sizeSubTitleTag);
      font-weight: 500;
      border: var(--borderSkill);
      border-radius: var(--borderRadius);
      padding-inline: 0.5rem;
      padding-block: 0.2rem;
    }

    a:hover h4 {
      background-color: var(--bgSpanTag);
    }

    h5 {
      color: var(--colorSubTitleTag);
      font-size: var(--sizeSubTitleTag);
    }

    /*  ----  ESTILOS DE LOS ENLACES   ---- */
    a {
      text-decoration: none;
      transition: all 0.3s ease;
    }
    a:hover:not(:has(h3)) {
      transform: scale(1.1);
    }

    /* Elemento separador entre svg del enlace y el titulo h3 */

    .card__title {
      position: relative;
      width: fit-content;
    }

  

    .title__externalLink {
      display: inline-block;
      width: fit-content;
      position: relative;
      top: 2.5px;
      left: 4px;
    }

    /*  ----  ESTILOS PARA LA ETIQUETA TIME ----   */
    time {
      font-size: var(--sizeTime);
      color: var(--colorTime);
    }

    /*  ----  ESTILOS DEL TEXTO NORMAL  ----   */
    p,
    span {
      color: var(--colorSummary);
      font-size: var(--sizeSummary);
      line-height: var(--sizeLineHeightTexto);
      margin: 0;
      padding: 0;
      text-wrap: pretty;
      padding-inline: 0.5rem;
    }

    /* APARTADO DE ESTILOS DEL KEYBOARD MANAGER */
    .keyboard {
      border-top: var(--borderCard);
      background-color: var(--bg-keyboard);
      padding-block: 0.2rem;
      position: fixed;
      bottom: 0px;
      width: 100%;
      color: var(--colorButton);
      font-size: 0.8rem;
      justify-content: center;
    }

    .keyboard__key {
      background: var(--bg-keyboard__key);
      padding: 2px 4px;
      border-radius: var(--borderRadius);
      font-size: x-small;
    }

    /* Estilos para el boton de Descargar */
    
  .div__DownloadButton {
    display: none;
    position: fixed;
    right: 1.5rem;
    bottom: 2.5rem;
  }

  @media (max-width: 804px) {
    .div__DownloadButton {
      display: block;
    }
  }
  @media (max-width: 711px) {
    .div__DownloadButton {
      display: none;
    }
  }

  /* Estilos para la barra de navegacion */
  .nav__header {
      padding: 0 1rem;
      top: 0;
      background-color: var(--bg-keyboard);
      position: fixed;
      width: 100%;
      min-height: 70px;
      z-index: 10;

      align-items: center;
      gap: 2rem;
    }

  /* Apartado para ocultar los atajos y estilos al imprimir */
    @media print {
      ninja-keys {
        display: none;
      }
      .nav__header{
        display: none;
      }
      * {
        color: #000 !important;
      }
    }
  </style>
</html>
