---
const { text, url } = Astro.props;

import SeeMore from "@/icons/general/see-more.astro";
---

<div class="container__view-more">
  <div class="view-more__line"></div>
  <a
    href={url}
    title={`Ver Todos los ${text}`}
  >
    <SeeMore />
    <span>Ver Todos</span>
  </a>
</div>

<style>
  .container__view-more {
    margin-top: 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  a {
    color: var(--colorSkill);
    border: var(--borderCard);
    border-radius: var(--borderRadius);
    position: relative;
    background-color: var(--bgSpanTag);
    top: -18px;
    padding: 4px 10px;
    display: flex;
  }
  .view-more__line {
    border: var(--borderCard);
    border-radius: var(--borderRadius);
    width: 85%;
  }

  @media print {
    .container__view-more {
      display: none;
    }
  }
</style>
