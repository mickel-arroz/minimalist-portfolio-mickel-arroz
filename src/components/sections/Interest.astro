---
import Section from "@/components/Section.astro";

import { interests } from "@cv";

import { SKILLS_ICONS } from "@/records.astro";

const Icon = SKILLS_ICONS["Generic"];
---

{
  interests.length ? (
    <Section title="Intereses">
      <ul class="section__list">
        {interests.map((interest) => {
          return (
            <li class="list__element">
              <span class="element__item">
                {Icon && <Icon />}
                {interest}
              </span>
            </li>
          );
        })}
      </ul>
    </Section>
  ) : null
}

<style>
  .section__list {
    flex-direction: row;
    gap: 1rem;
  }

  .list__element {
    border: 1px solid #888;
    border-radius: 5px;
    padding: 0.1rem 0.5rem;
    height: 28.38px;
    display: flex;
  }

  .element__item {
    font-weight: 600;
    font-size: 0.8rem;
    color: var(--colorSubTitleTag);
    display: flex;
    gap: 0.5rem;
    align-items: center;
    line-height: normal;
  }
</style>
