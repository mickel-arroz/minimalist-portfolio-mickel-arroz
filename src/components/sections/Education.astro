---
import Section from '@/components/Section.astro';

import ExternalLink from '@/icons/general/external-link.astro';

import { education } from '@cv';

// Helper para formatear fechas con formato MM-DD-YYYY a 'MM/YYYY'.
const formatMonthYear = (value: string | null): string | null => {
  if (!value) return null;
  const parts = value.split('-');
  if (parts.length !== 3) return value; // fallback si no cumple formato esperado
  const [mm, _dd, yyyy] = parts;
  // Validar mes (01-12)
  const monthNum = Number(mm);
  if (isNaN(monthNum) || monthNum < 1 || monthNum > 12) return value;
  const normalized = monthNum.toString().padStart(2, '0');
  return `${normalized}/${yyyy}`;
};
---

{
  education.length ? (
    <Section title="Educación">
      <ul class="section__list">
        {education.map(
          ({
            institution,
            url,
            area,
            studyType,
            startDate,
            endDate,
            courses,
          }: {
            institution: string;
            url: string;
            area: string;
            studyType: string;
            startDate: string | null;
            endDate: string | null;
            courses: { name: string; url?: string | null }[];
          }) => {
            const startLabel = formatMonthYear(startDate);
            const endLabel = endDate ? formatMonthYear(endDate) : 'Actualmente';
            return (
              <li class="list__element">
                <article class="element__card">
                  <header class="element__card__header">
                    <div class="header__flex-title">
                      <a
                        class="card__link--title"
                        href={url}
                        target="_blank"
                        title={`Ver la página de ${institution}`}
                        rel="noopener noreferrer"
                      >
                        <h3 class="card__title">
                          {institution}
                          <div class="title__externalLink">
                            <ExternalLink />
                          </div>
                        </h3>
                      </a>
                      <h4 class="card__entity">{studyType}</h4>
                    </div>
                    <time class="card__header__date">
                      {startLabel ? startLabel + ' - ' : ''}
                      {endLabel}
                    </time>
                  </header>
                  <footer class="card__footer">
                    <h5 class="footer__title">{area}</h5>
                    <div class="footer__list">
                      {courses.length
                        ? courses.map((course) => {
                            return course.url ? (
                              <a
                                class="card__footer__link"
                                href={course.url}
                                target="_blank"
                                rel="noopener noreferrer"
                              >
                                {course.name}
                              </a>
                            ) : (
                              <span class="footer__list__element">
                                {course.name}
                              </span>
                            );
                          })
                        : ''}
                    </div>
                  </footer>
                </article>
              </li>
            );
          }
        )}
      </ul>
    </Section>
  ) : null
}

<style>
  .header__flex-title,
  .footer__list {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }

  .card__footer {
    flex-direction: column;
  }

  .card__footer__link,
  .footer__list__element {
    border: var(--borderSkill);
    border-radius: var(--borderRadius);
    padding-inline: 0.5rem;
    padding-block: 0.2rem;
    transition: all 0.5s ease;
    line-height: normal;
    height: auto;
    background-color: var(--bgBody);
  }

  .card__footer__link {
    color: var(--colorSummary);
    font-size: var(--sizeSpanTagXL);
  }
  .card__footer__link:hover {
    background: var(--bgButtonHover);
    transform: scale(1.05);
  }

  .footer__list {
    padding-top: 0.1rem;
    display: flex;
    align-items: center;
    padding-inline: 0.5rem;
    flex-wrap: wrap;
    gap: 0.5rem 1rem;
  }

  .card__link--title:hover {
    text-decoration: underline;
  }

  @media (max-width: 854px) {
    .section__list {
      padding: 0;
    }
    .header__flex-title {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }

    .element__card__header {
      flex-direction: column-reverse;
      gap: 0.2rem;
    }

    .card__footer {
      padding-inline: 0;
    }
  }
</style>
