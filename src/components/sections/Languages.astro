---
import Section from "@/components/Section.astro";
import { languages } from "@cv";
---

{
  languages.length ? (
    <Section title="Idiomas">
      <ul class="section__list">
        {languages.map(({ language, fluency, certificates }) => {
          return (
            <li class="list__element">
              <article class="element__card">
                <h3 class="card__title">{language}</h3>
                <h4 class="card__nivel">{fluency}</h4>
              </article>
              <footer class="card__footer">
                {certificates.map(({ name, url }) => {
                  return url ? (
                    <a
                      class="card__link"
                      id="courses"
                      href={url}
                      target="_blank"
                      rel="noopener noreferrer"
                    >
                      {name}
                    </a>
                  ) : (
                    <span class="footer__list__element">{name}</span>
                  );
                })}
              </footer>
            </li>
          );
        })}
      </ul>
    </Section>
  ) : (
    []
  )
}

<style>
  .section__list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    grid-auto-rows: 1fr;
    gap: 1rem;
    justify-content: center;
  }

  .list__element {
    border: var(--borderCard);
    border-radius: 5px;
    padding: 0.7rem;
    height: 100%;
    box-shadow: 0 1px 1px #f2f2f2;
  }

  .element__card {
    gap: 0.15rem;
  }

  .card__title:hover {
    color: var(--colorTitleElement);
    text-decoration: none;
  }

  .card__nivel {
    color: #555;
    font-weight: 900;
    border: none;
    font-size: 1rem;
  }

  .card__footer {
    padding-block: 0.2rem;
    padding-inline: 1rem;
  }

  .card__link {
    padding-inline: 0.5rem;
  }
  .card__link,
  .footer__list__element {
    color: var(--colorButton);
    font-size: 0.65rem;
    border: var(--borderSkill);
    border-radius: var(--borderRadius);
    padding-block: 0.2rem;
    transition: all 0.5s ease;
    line-height: normal;
  }

  .card__link:hover {
    background: var(--bgButtonHover);
    color: var(--colorButtonHover);
  }

  @media (max-width: 645px) {
    .section__list {
      padding-inline: 0;
    }
  }
</style>
