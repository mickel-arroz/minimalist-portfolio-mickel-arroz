---
import Section from "@/components/Section.astro";

import { skills } from "@cv";

import { SKILLS_ICONS } from "@/records.astro";
---

<Section title="Habilidades">
  <ul>
    {
      skills.map(({ name }) => {
        const iconName =
          name === "Next.js" ? "Next" : name === "Astro" ? "Astrojs" : name;
        const Icon = SKILLS_ICONS[iconName];
        return (
          <li>
            <span>
              {Icon && <Icon />}
              {name}
            </span>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    align-items: center;
    padding-inline: 0.5rem;
  }

  li {
    border: 1px solid #888;
    border-radius: 5px;
    padding: 0.1rem 0.5rem;
    height: 28.38px;
    display: flex;
  }

  span {
    font-weight: 600;
    font-size: 0.8rem;
    color: #444;
    display: flex;
    gap: 0.5rem;
    align-items: center;
    line-height: normal;
  }
</style>
