---
const { title } = Astro.props;
---

<section class="section">
  {title && <h2 class="section__title">{title}</h2>}
  <slot />
</section>

<style>
  .section {
    max-width: 850px;
    margin: 0 auto 58px;

    /* Apartado de las animaciones */
    animation: reveal linear both;
    animation-timeline: view();
    animation-range: entry 10% cover 15%;

    /* Hacer que se haga un salto de linea entre cada sectionel imprimir la pagina */
    break-inside: avoid;
  }

  .section__title {
    margin-bottom: 1rem;
  }

  /* Apartado de animaciones del scroll */

  @keyframes reveal {
    from {
      opacity: 0;
      transform: scale(0.98);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  @media print {
    .section {
      margin-bottom: 2.5rem;
      animation: none;
    }
    .section > .section__title {
      margin-bottom: 0.5rem;
    }
  }
</style>
